@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container card-properties h-100 w-60 profileMain"
    <div class="col backgroundFrosty profile-border align-items-center form-check-all">
        <div class="backgroundFrosty form-check mx-auto form-check-all profile-border">
            <h2>Manage your account</h2>

            <h4>Change your account settings</h4>
            <hr />

            <div class="row">
                <div class="col-md-3 backgroundFrosty form-check mx-auto form-check-all w-100 profile-border">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9 backgroundFrosty form-check mx-auto form-check-all profile-border">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
