@model IEnumerable<DatingSite.Models.GameViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mg-top-2 ">
    <div class="row ">
        <div class="col-md-8 mx-auto ">
            <form asp-action="Submit" class="form-check mx-auto ">
                <div asp-validation-summary="ModelOnly" class="text-danger "></div>
                <div class="container-g display-inlineblock mb-4 ">
                    @foreach (var item in Model)
                    {
                        <label class="option_item form-check-label gamelbl mt-1">
                            <input type="checkbox" name="CheckBoxes" value="@item.Name" class="checkbox hide1">
                            <div class="option_inner facebook">
                                <img src="~/img/Game/@(item.Name).jpg" class="h-100 img-fluid position-absolute fixed-top card-img-top " />
                                <div class="tickmark">
                                </div>
                                <div class="name">
                                    @item.Name
                                </div>
                            </div>
                        </label>
                    }
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Next step" class="btn btn-primary" />
                </div>
                <div class="progress mt-3">
                    <div class="progress-bar" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </form>
        </div>
    </div>
</div>

