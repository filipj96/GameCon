@model IEnumerable<DatingSite.Models.GameViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container card-properties h-100 w-50 profileMain ">
    <div class="col backgroundFrosty profile-border align-items-center form-check-all ">
        <form asp-action="Submit" class="form-check mx-auto form-check-all backgroundFrosty ">
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
            <div class="container-g display-inlineblock mb-4 ">
                @foreach (var item in Model)
                {
                    <label class="option_item form-check-label gamelbl mt-1">
                        <input type="checkbox" name="CheckBoxes" value="@item.Name" class="checkbox hide1 position-fixed checkbox:checked">
                        <div class="option_inner facebook paddingauto genrelbl">
                            <img src="~/img/Game/@(item.Name).jpg" class="h-100 img-fluid position-absolute fixed-top card-img-top " />
                            <div class="tickmark">
                            </div>
                            <div class="name">
                                @item.Name
                            </div>
                        </div>
                    </label>
                }
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Next step" class="btn btn-primary" />
            </div>
            <div class="progress mt-3">
                <div class="progress-bar profile-border" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </form>
    </div>
</div>