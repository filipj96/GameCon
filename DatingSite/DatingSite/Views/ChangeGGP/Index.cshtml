@model DatingSite.Models.GGPViewModel
@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Currently selected Games/Genres/Platforms</h3>
<a asp-controller="Profile" asp-action="Index" class="card-link">Back to profile</a>

<li class="list-group-item text-center">
    <h5>Favorite Games</h5>
    <div class="container-g display-inlineblock mb-4 ">
        @foreach (var game in Model.Games)
        {
            <label class="option_item form-check-label genrelbl mt-1 m-4">
                <input type="checkbox" name="CheckBoxes" value="@game.Name" class="checkbox hide1 position-fixed">
                <div class="option_inner facebook paddingauto genrelbl">
                    <img src="~/img/Game/@(game.Name).jpg" class="genreimg img-fluid position-absolute fixed-top card-img-top pd-top-05 " />

                    <div class="name mg-top-80">@game.Name</div>
                </div>

            </label>
        }
    </div>
</li>

<li class="list-group-item text-center">
    <h5>Favorite Genres</h5>
    <div class="container-g display-inlineblock mb-4 ">
        @foreach (var genre in Model.Genres)
        {
            <label class="option_item form-check-label genrelbl mt-1 m-4">
                <input type="checkbox" name="CheckBoxes" value="@genre.Name" class="checkbox hide1 position-fixed">
                <div class="option_inner facebook paddingauto genrelbl">
                    <img src="~/img/Genre/@(genre.Name).png" class="genreimg img-fluid position-absolute fixed-top card-img-top pd-top-05 " />

                    <div class="name mg-top-80">@genre.Name</div>
                </div>

            </label>
        }
    </div>
</li>

<li class="list-group-item text-center">
    <h5>Favorite Platforms</h5>
    <div class="container-g display-inlineblock mb-4">
        @foreach (var platform in Model.Platforms)
        {

            <label class="option_item form-check-label genrelbl mt-1 m-4">
                <input type="checkbox" name="CheckBoxes" value="@platform.Name" class="checkbox hide1 position-fixed">
                <div class="option_inner facebook paddingauto genrelbl">
                    <img src="~/img/platform/@(platform.Name).png" class="genreimg img-fluid position-absolute fixed-top card-img-top pd-top-05 " />
                    <div class="name mg-top-80">@platform.Name</div>
                </div>

            </label>

        }
    </div>
</li>
