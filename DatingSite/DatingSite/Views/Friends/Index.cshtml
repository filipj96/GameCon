@model IEnumerable<DataLayer.Models.Friend>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FriendId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FriendId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FriendId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
